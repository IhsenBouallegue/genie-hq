{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "main-capability",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "brew",
          "cmd": "brew",
          "args": [
            "install",
            {
              "validator": "\\S+"
            }
          ],
          "sidecar": false
        },
        {
          "name": "apt",
          "cmd": "sudo",
          "args": [
            "apt-get",
            "install",
            "-y",
            {
              "validator": "\\S+"
            }
          ],
          "sidecar": false
        },
        {
          "name": "scoop",
          "cmd": "C:/Users/IhsenB/scoop/shims/scoop",
          "args": true,
          "sidecar": false
        },
        {
          "name": "winget",
          "cmd": "winget",
          "args": [
            "install",
            "--id",
            {
              "validator": "\\S+"
            },
            "--silent",
            "--exact",
            "--source",
            "winget"
          ],
          "sidecar": false
        }
      ]
    },
    "os:default"
  ]
}
