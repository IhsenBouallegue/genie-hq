{
  "productName": "GenieHQ",
  "version": "0.1.0",
  "identifier": "com.geniehq.app",
  "build": {
    "beforeDevCommand": "bun run next-dev",
    "beforeBuildCommand": "bun run next-build",
    "devUrl": "http://localhost:3002",
    "frontendDist": "../out"
  },
  "app": {
    "windows": [
      {
        "title": "GenieHQ",
        "width": 1280,
        "height": 720
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
